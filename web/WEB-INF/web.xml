<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>RegisterController</servlet-name>
        <servlet-class>controller.RegisterController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterController</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ManagerHomeServlet</servlet-name>
        <servlet-class>controller.ManagerHomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ManagerHomeServlet</servlet-name>
        <url-pattern>/manager/home</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ManagerProfileServlet</servlet-name>
        <servlet-class>controller.ManagerProfileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ManagerProfileServlet</servlet-name>
        <url-pattern>/manager/profile</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ManagerChangePasswordServlet</servlet-name>
        <servlet-class>controller.ManagerChangePasswordServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ManagerChangePasswordServlet</servlet-name>
        <url-pattern>/manager/change-password</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>auth/home.jsp</welcome-file>
        <welcome-file>auth/about.jsp</welcome-file>
        <welcome-file>auth/footer.jsp</welcome-file>
        <welcome-file>auth/price.jsp</welcome-file>
        <welcome-file>auth/search.jsp</welcome-file>
        <welcome-file>auth/service.jsp</welcome-file>
        <welcome-file>auth/contact.jsp</welcome-file>
        <welcome-file>auth/login.jsp</welcome-file>
        <welcome-file>auth/register.jsp</welcome-file>
    </welcome-file-list>
</web-app>
